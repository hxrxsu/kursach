<Page x:Class="kursach.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursach"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA06A1C" Offset="0.85"/>
                <GradientStop Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Логин" Foreground="White" HorizontalAlignment="Left" Margin="110,20,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        </Grid>
        <Label x:Name="Lbl_CurrentRole" FontSize="20" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Grid.Column="1"/>
        <TextBox x:Name="TB_UserPass" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="White" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Height="30"/>
        <Button Content="Cохранить" Grid.Row="1" Foreground="White" Background="#00DDDDDD" Click="Button_Click" VerticalAlignment="Bottom" Grid.Column="1"/>
        <TextBox x:Name="TB_UserLogin" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="White" Grid.Column="1" VerticalAlignment="Top" Height="30" Margin="0,112,0,0" Grid.RowSpan="2"/>
        <Label Grid.Column="1" Content="Пароль" Foreground="White" HorizontalAlignment="Left" Margin="106,62,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</Page>
